ntToEdit: null,\r\n      commentToDelete: null\r\n    }\r\n  },\r\n  methods: {\r\n    formatDate,\r\n    isAuthor(comment) {\r\n      console.log(comment)\r\n      return comment.author === \"Trọng Bảo\"\r\n    },\r\n    toggleReplyForm(commentId) {\r\n      if (this.showReplyForm === commentId) {\r\n        this.showReplyForm = null\r\n      } else {\r\n        this.showReplyForm = commentId\r\n      }\r\n    },\r\n    addComment(comment) {\r\n      this.$emit(\"add-comment\", comment)\r\n    },\r\n    toggleEditForm(comment) {\r\n      this.commentToEdit = comment\r\n      this.showEditForm = !this.showEditForm\r\n      this.editContent = comment.content\r\n    },\r\n    submitEdit() {\r\n      this.$emit(\"edit-comment\", {\r\n        ...this.commentToEdit,\r\n        content: this.editContent\r\n      })\r\n      this.showEditForm = false\r\n      this.commentToEdit = null\r\n      this.editContent = \"\"\r\n    },\r\n    toggleDeleteForm(comment) {\r\n      this.commentToDelete = comment\r\n      this.showDeleteForm = !this.showDeleteForm\r\n    },\r\n    submitDelete() {\r\n      this.$emit(\"delete-comment\", this.commentToDelete)\r\n      this.showDeleteForm = false\r\n      this.commentToDelete = null\r\n    },\r\n    submitReply(comment) {\r\n      this.$emit(\"reply\", {\r\n        content: this.replyContent,\r\n        parentId: comment.id\r\n      })\r\n      this.showReplyForm = null\r\n      this.replyContent = \"\"\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.comment-list {\r\n  padding: 20px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\n.Comment {\r\n  font-family: serif;\r\n  padding-left: 40px;\r\n}\r\n\r\nul li {\r\n  list-style-type: none;\r\n}\r\n\r\n.comment {\r\n  margin-bottom: 16px;\r\n  padding: 16px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 4px;\r\n}\r\n\r\n.comment-meta {\r\n  margin-top: 8px;\r\n  display: flex;\r\n  margin-left: 40px;\r\n  align-items: center;\r\n}\r\n\r\n.comment-meta > but