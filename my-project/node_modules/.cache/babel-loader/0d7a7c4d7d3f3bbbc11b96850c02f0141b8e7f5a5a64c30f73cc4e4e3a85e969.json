ntId = null;\n    },\n    deleteReply(commentId, replyId) {\n      // xóa bình luận con dựa trên commentId và replyId\n      const comment = this.comments.find(comment => comment.id === commentId);\n      comment.replies = comment.replies.filter(reply => reply.id !== replyId);\n    },\n    editReply(reply) {\n      // sửa đổi bình luận con\n      reply.editing = true;\n    },\n    saveReply(reply) {\n      // lưu các thay đổi của bình luận con\n      reply.editing = false;\n    },\n    cancelEditReply(reply) {\n      console.log(reply);\n      // hủy bỏ sửa đổi của bình luận con\n      reply.editing = false;\n    }\n  }\n};","map":{"version":3,"names":["CommentData","name","data","comments","newCommentContent","replyCommentId","newReplyContent","methods","addComment","newComment","id","length","author","content","editing","replies","push","deleteComment","commentId","filter","comment","editComment","saveComment","cancelEditComment","showReplyForm","addReply","newReply","deleteReply","replyId","find","reply","editReply","saveReply","cancelEditReply","console","log"],"sources":["C:\\Users\\Admin\\Desktop\\Test-FCORB-FE\\my-project\\src\\components\\Commentlist\\CommentList.vue"],"sourcesContent":["<template>\r\n  <div>\r\n    <h2>Comments</h2>\r\n    <ul>\r\n      <li v-for=\"comment in comments\" :key=\"comment.id\">\r\n        <div>\r\n          <strong>{{ comment.author }}</strong>\r\n          <span v-if=\"!comment.editing\">{{ comment.content }}</span>\r\n          <textarea v-if=\"comment.editing\" v-model=\"comment.content\"></textarea>\r\n          <button @click=\"deleteComment(comment.id)\">Delete</button>\r\n          <button @click=\"showReplyForm(comment)\">Reply</button>\r\n          <button v-if=\"!comment.editing\" @click=\"editComment(comment)\">Edit</button>\r\n          <button v-if=\"comment.editing\" @click=\"saveComment(comment)\">Save</button>\r\n          <button v-if=\"comment.editing\" @click=\"cancelEditComment(comment)\">Cancel</button>\r\n        </div>\r\n        <!-- hiển thị các bình luận con (replies) của bình luận hiện tại (comment) -->\r\n        <template v-if=\"comment.replies\">\r\n          <ul>\r\n            <li v-for=\"reply in comment.replies\" :key=\"reply.id\">\r\n              <div>\r\n                <strong>{{ reply.author }}</strong>\r\n                <span v-if=\"!reply.editing\">{{ reply.content }}</span>\r\n                <textarea v-if=\"reply.editing\" v-model=\"reply.content\"></textarea>\r\n                <button @click=\"showReplyForm(reply)\">Reply</button>\r\n                <button @click=\"deleteReply(comment.id, reply.id)\">Delete</button>\r\n                <button v-if=\"!reply.editing\" @click=\"editReply(reply)\">Edit</button>\r\n                <button v-if=\"reply.editing\" @click=\"saveReply(reply)\">Save</button>\r\n                <button v-if=\"reply.editing\" @click=\"cancelEditReply(reply)\">Cancel</button>\r\n              </div>\r\n              <!-- hiển thị các bình luận con của bình luận con (subreply) -->\r\n              <template v-if=\"reply.replies.length > 0\">\r\n                <ul>\r\n                  <li v-for=\"subreply in reply.replies\" :key=\"subreply.id\">\r\n                    <div>\r\n                      <strong>{{ subreply.author }}</strong>\r\n                      <span v-if=\"!subreply.editing\">{{ subreply.content }}</span>\r\n                      <textarea v-if=\"subreply.editing\" v-model=\"subreply.content\"></textarea>\r\n                      <button @click=\"showReplyForm(subreply)\">Reply</button>\r\n                      <button @click=\"deleteReply(comment.id, subreply.id)\">Delete</button>\r\n                      <button v-if=\"!subreply.editing\" @click=\"editReply(subreply)\">Edit</button>\r\n                      <button v-if=\"subreply.editing\" @click=\"saveReply(subreply)\">Save</button>\r\n                      <button v-if=\"subreply.editing\" @click=\"cancelEditReply(subreply)\">Cancel</button>\r\n                    </div>\r\n                  </li>\r\n                </ul>\r\n              </template>\r\n            </li>\r\n          </ul>\r\n        </template>\r\n        <!-- hiển thị form để trả lời bình luận -->\r\n        <form v-if=\"comment.id === replyCommentId\" @submit.prevent=\"addReply(comment)\">\r\n          <textarea v-model=\"newReplyContent\" placeholder=\"Write a reply...\" :rows=\"3\"></textarea>\r\n          <button>Submit</button>\r\n        </form>\r\n      </li>\r\n    </ul>\r\n    <!-- hiển thị form để thêm bình luận mới -->\r\n    <form @submit.prevent=\"addComment\">\r\n      <textarea v-model=\"newCommentContent\" placeholder=\"Write a comment...\" :rows=\"3\"></textarea>\r\n      <button>Submit</button>\r\n    </form>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport CommentData from \"@/json/CommentData.json\"\r\n\r\nexport default {\r\n  name: \"CommentsView\",\r\n  data() {\r\n    return {\r\n      comments: CommentData.comments,\r\n      newCommentContent: \"\",\r\n      // sử dụng replyCommentId để xác định bình luận mà người dùng đang trả lời\r\n      replyCommentId: null,\r\n      newReplyContent: \"\"\r\n    }\r\n  },\r\n  methods: {\r\n    addComment() {\r\n      // tạo bình luận mới và thêm vào danh sách bình luận\r\n      const newComment = {\r\n        id: this.comments.length + 1,\r\n        author: \"Bảo\",\r\n        content: this.newCommentContent,\r\n        editing: false,\r\n        replies: []\r\n      }\r\n      this.comments.push(newComment)\r\n      // reset nội dung của ô input sau khi thêm bình luận thành công\r\n      this.newCommentContent = \"\"\r\n    },\r\n    deleteComment(commentId) {\r\n      // xóa bình luận dựa trên commentId\r\n      this.comments = this.comments.filter((comment) => comment.id !== commentId)\r\n    },\r\n    editComment(comment) {\r\n      // sửa đổi bình luận\r\n      comment.editing = true\r\n    },\r\n    saveComment(comment) {\r\n      // lưu các thay đổi của bình luận\r\n      comment.editing = false\r\n    },\r\n    cancelEditComment(comment) {\r\n      // hủy bỏ sửa đổi của bình luận\r\n      comment.editing = false\r\n    },\r\n    showReplyForm(comment) {\r\n      // hiển thị form để trả lời bình luận\r\n      this.replyCommentId = comment.id\r\n    },\r\n    addReply(comment) {\r\n      // tạo bình luận con mới và thêm vào danh sách bình luận của bình luận cha\r\n      const newReply = {\r\n        id: comment.replies.length + 1,\r\n        author: \"Bảo\",\r\n        content: this.newReplyContent,\r\n        editing: false,\r\n        replies: []\r\n      }\r\n      comment.replies.push(newReply)\r\n      // reset nội dung của ô input sau khi thêm bình luận con thành công\r\n      this.newReplyContent = \"\"\r\n      // đặt lại giá trị replyCommentId để ẩn form trả lời bình luận\r\n      this.replyCommentId = null\r\n    },\r\n    deleteReply(commentId, replyId) {\r\n      // xóa bình luận con dựa trên commentId và replyId\r\n      const comment = this.comments.find((comment) => comment.id === commentId)\r\n      comment.replies = comment.replies.filter((reply) => reply.id !== replyId)\r\n    },\r\n    editReply(reply) {\r\n      // sửa đổi bình luận con\r\n      reply.editing = true\r\n    },\r\n    saveReply(reply) {\r\n      // lưu các thay đổi của bình luận con\r\n      reply.editing = false\r\n    },\r\n    cancelEditReply(reply) {\r\n      console.log(reply)\r\n      // hủy bỏ sửa đổi của bình luận con\r\n      reply.editing = false\r\n    }\r\n  }\r\n}\r\n</script>\r\n"],"mappings":";AAiEA,OAAOA,WAAU,MAAO,yBAAwB;AAEhD,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAEH,WAAW,CAACG,QAAQ;MAC9BC,iBAAiB,EAAE,EAAE;MACrB;MACAC,cAAc,EAAE,IAAI;MACpBC,eAAe,EAAE;IACnB;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX;MACA,MAAMC,UAAS,GAAI;QACjBC,EAAE,EAAE,IAAI,CAACP,QAAQ,CAACQ,MAAK,GAAI,CAAC;QAC5BC,MAAM,EAAE,KAAK;QACbC,OAAO,EAAE,IAAI,CAACT,iBAAiB;QAC/BU,OAAO,EAAE,KAAK;QACdC,OAAO,EAAE;MACX;MACA,IAAI,CAACZ,Q